<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_height="match_parent"
    tools:context=".InternalStorage">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnBuat"
        android:text="Buat File"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnUbah"
        android:onClick="ubahFile"
        android:text="Ubah File"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Baca File"
        android:onClick="bacaFile"
        android:id="@+id/btnBaca"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hapus File"
        android:onClick="hapusFile"
        android:id="@+id/btnHapus"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        android:ems="10"
        android:id="@+id/txtHasil"
        android:layout_margin="20dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:padding="5dp"
        android:hint="Hasil Baca File"
        android:inputType="textMultiLine"/>
</LinearLayout>