<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home">

    <Button
        android:background="@android:color/holo_blue_dark"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:onClick="Puzzle"
        android:text="Puzzle"
        android:layout_marginTop="10dp"/>

    <Button
        android:background="@android:color/holo_blue_dark"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:onClick="InputNama"
        android:text="Input Nama Saya"
        android:layout_marginTop="10dp"/>

    <Button
        android:background="@android:color/holo_blue_dark"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:onClick="Kalkulator"
        android:text="Kalkulator"
        android:layout_marginTop="10dp"/>

    <Button
        android:background="@android:color/holo_blue_dark"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:onClick="ListView"
        android:text="ListView"
        android:layout_marginTop="10dp"/>

    <Button
        android:background="@android:color/holo_blue_dark"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:onClick="InternalStorage"
        android:text="Internal Storage"
        android:layout_marginTop="10dp"/>

    <Button
        android:background="@android:color/holo_blue_dark"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:onClick="HalamanMain"
        android:text="Halaman Main"
        android:layout_marginTop="10dp"/>

    <Button
        android:background="@android:color/holo_blue_dark"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:onClick="MyLibrary"
        android:text="My Library"
        android:layout_marginTop="10dp"/>

    <Button
        android:background="@android:color/holo_blue_dark"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:onClick="Day11"
        android:text="Day 11"
        android:layout_marginTop="10dp"/>

</LinearLayout>